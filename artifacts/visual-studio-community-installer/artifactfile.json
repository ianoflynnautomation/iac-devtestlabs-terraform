{
  "$schema": "https://raw.githubusercontent.com/Azure/azure-devtestlab/master/schemas/2016-11-28/dtlArtifacts.json",
  "title": "Install Visual Studio 2022 (Community)",
  "publisher": "My Custom Artifacts",
  "description": "Installs Visual Studio 2022 Community Edition with customizable workloads.",
  "tags": [
    "VisualStudio",
    "IDE",
    "Development",
    ".NET"
  ],
  "targetOsType": "Windows",
  "parameters": {
    "workloads": {
      "type": "string",
      "displayName": "Workloads to Install",
      "description": "A space-separated list of workload IDs. Find IDs at https://aka.ms/vs/workloads",
      "defaultValue": "Microsoft.VisualStudio.Workload.ManagedDesktop"
    }
  },
  "runCommand": {
    "commandToExecute": "[concat('powershell.exe -ExecutionPolicy bypass -File Install-VisualStudio.ps1 -Workloads \"', parameters('workloads'), '\"')]"
  }
}